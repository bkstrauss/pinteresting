<% if !user_signed_in? %>
  <%= "Access Not Granted" %>
<% elsif current_user.admin == false %>
  <%= "Access Not Granted" %>
<% else %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Image</th>
        <th>Description</th>
        <th>Company</th>
        <th>User</th>
        <th>Evaluation Status</th>
        <th colspan="5"></th>
      </tr>
    </thead>

    <tbody>
      <% @pins.each do |pin| %>
        <tr>
          <td><a href="<%= pin.image.url %>"></td>
          <td><%= pin.description %></td>
          <td><%= pin.company_name %></td>
          <td><%= pin.user.name %></td>
          <td><%= pin.status %></td>
            <td><%= link_to 'Delete submission', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>