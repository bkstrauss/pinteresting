<% if !user_signed_in? %>
	<%= render 'pages/home' %>
<% else %>
	<h1>My submissions</h1>

	<% num_pins = 0 %>
	<% @pins.each do |pin| %>
		<% if pin.user == current_user %>
			<% num_pins = num_pins + 1 %>
		<% end %>
	<% end %>
	<% if num_pins == 0 %>
		<%= 'No submissions to-date. Check out the Challenges page for some inspiration!' %>
	<% else %>
		<table class="table table-bordered">
		  <thead>
		    <tr>
		      <th>Image</th>
		      <th>Description</th>
		      <th>Company</th>
		      <th>Evaluation Status</th>
		      <th colspan="4"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @pins.each do |pin| %>
		      <tr>
		      	<% if pin.user == current_user %>
			      <td><%= image_tag pin.image.url(:medium) %></td>
			      <td><%= pin.description %></td>
			      <td><%= pin.company_name %></td>
			      <td><%= pin.status %></td>
		          <td><%= link_to 'Delete submission', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		        <% end %>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	<% end %>
	<br>

	<%= link_to 'New Submission', new_pin_path %>
<% end %>