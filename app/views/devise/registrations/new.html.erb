<div class="panel panel-default">
	<div class="panel-heading">
		<h2>Sign up</h2>
	</div>

	<div class="panel-body">
		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>

		    <div class="form-group">
		  	  <div>
		  	  	<%= f.label :name %><br />
		  	    <%= f.text_field :name, :autofocus => true, class: "form-control" %>
		  	  </div>
		    </div>

		  <div class="form-group">
			  <div>
			  	<%= f.label :email %><br />
			    <%= f.email_field :email, :autofocus => true, class: "form-control" %>
			  </div>
		  </div>

	  	  <div class="form-group">
	  		  <div>
	  	  		<%= f.label :college, 'College / University' %><br />
	  	   	 <%= f.text_field :college, :autofocus => true, class: "form-control" %>
	  	 	 </div>
	  	  </div>

	      <div class="form-group">
	    	  <div>
	    	  	<%= f.label :graduation_year, 'Graduation Year (or Expected)' %><br />
	    	    <%= f.text_field :graduation_year, :autofocus => true, class: "form-control" %>
	    	  </div>
	      </div>

	      <div class="form-group">
	    	  <div>
	    	  	<%= f.label :degree, 'Degree (e.g., Bachelors, Masters, Associates)' %><br />
	    	    <%= f.text_field :degree, :autofocus => true, class: "form-control" %>
	    	  </div>
	      </div>

		  <div class="form-group">
			<div>
			  <%= f.label :password %><br />
			  <%= f.password_field :password, class: "form-control" %>
			</div>
		  </div>

		  <div class="form-group">
			  <div>
			  	<%= f.submit "Sign up", class: "btn-default" %>
			  </div>
		  </div>
		<% end %>
	</div>

	<div class="panel-footer">
		<%= render "devise/shared/links" %>
	</div>
</div>
